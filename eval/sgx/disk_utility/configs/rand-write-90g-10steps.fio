; rand-write-90g-10steps.fio
; Random write benchmark - 10 steps of 10GB each, total 90GB
; Each step writes 10GB with 4K random writes, executed sequentially
; Use --filename to specify target device (/dev/sworndisk or /dev/cryptdisk)

[global]
ioengine=sync
thread=1
numjobs=1
direct=1
fsync_on_close=1
group_reporting=1

; Step 1: 10GB 4K random write
[step-1-10g]
stonewall
wait_for_previous
rw=randwrite
bs=4k
io_size=10G
size=100G

