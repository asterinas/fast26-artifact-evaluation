# reproduce-read.fio
# Read benchmark config - all read tests run in sequence, reusing same file
# File is created by layout section, then all reads share it

[global]
ioengine=sync
size=40G
thread=1
numjobs=1
direct=1
fsync_on_close=1
time_based=1
runtime=20

# Layout: create file for read tests (not time-based, write entire file)
[layout]
stonewall
wait_for_previous
rw=write
bs=256k
time_based=0
end_fsync=1

# Sequential Read Test
[seq-read-256k]
stonewall
wait_for_previous
group_reporting
rw=read
bs=256k

# Random Read Tests
[rand-read-4k]
stonewall
wait_for_previous
group_reporting
rw=randread
bs=4k

[rand-read-32k]
stonewall
wait_for_previous
group_reporting
rw=randread
bs=32k

[rand-read-256k]
stonewall
wait_for_previous
group_reporting
rw=randread
bs=256k
